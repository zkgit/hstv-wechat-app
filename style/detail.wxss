/*推送按钮  */

.tvplay {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  background: #ff5e00;
  z-index: 10;
}

.dbtvplay {
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  background: #ff5e00;
  z-index: 10;
}

.dbmbplay {
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  text-align: center;
  background: #00b4ff;
  z-index: 10;
}

/* 剧集 */

.tvdrama .img {
  width: 13rpx;
  height: 92rpx;
}

.tvdrama  .tab-bar {
  /* display: inline-block; */
  margin-right: 20rpx;
  height: 114rpx;
  width: 114rpx;
  background: #f5f5f5;
  text-align: center;
  line-height: 114rpx;
  border-radius: 12rpx;
}

.tvdrama .tab-bar-arts {
  margin-right: 20rpx;
  height: 150rpx;
  width: 300rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  /* padding: 20rpx; */
  box-sizing: border-box;
}

.tvdrama .tab-bar-arts .desc {
  height: 106rpx;
  width: 244rpx;
  line-height: 36rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}


/*评论*/

.comment .top {
  height: 60rpx;
  line-height: 60rpx;
}

.comment .input {
  /* padding: 0 95rpx 35rpx 70rpx; */
  height: 70rpx;
}

.comment .input image {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 35rpx;
}

.comment .comli {
  padding-bottom: 55rpx;
}

.comment .input input {
  background: #f0f0f0;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  /* margin-top: -5rpx; */
}

.comment .comli .litop {
  height: 70rpx;
  padding-left: 80rpx;
  line-height: 35rpx;
  padding-right: 195rpx;
}

.comment .comli .litop .comuser {
  height: 40rpx;
  line-height: 40rpx;
}

.comment .comli .litop .userimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.comment .comli .comtext {
  padding-left: 80rpx;
}

.comment .comuser image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.comment .twocominfo {
  padding: 10rpx 10rpx 10rpx 10rpx;
  margin-left: 70rpx;
  margin-top: 50rpx;
  background: #f6f6f6;
  line-height: 46rpx;
}

.comment .twocominfo .jiao {
  width: 0;
  height: 0;
  border-bottom: 25rpx solid #f6f6f6;
  border-right: 35rpx solid transparent;
  top: -24rpx;
  left: 0;
}

.comment .nomore {
  color: #e5e5e5;
  padding-bottom: 35rpx;
}

.comment .send {
  width: 80rpx;
  height: 50rpx;
  background: #3f9bff;
  line-height: 50rpx;
  border-radius: 5rpx;
  margin-top: 5rpx;
}

.comment .dm {
  height: 50rpx;
  background: #3f9bff;
  line-height: 50rpx;
  border-radius: 5rpx;
  margin-top: 5rpx;
}

.comment .icon-setting {
  height: 50rpx;
  line-height: 50rpx;
}

.popup-example--bottom .zan-popup__container {
  left: 0;
  right: 0;
}

/*弹幕颜色滑块  */

.color-box {
  width: 100%;
  height: 140rpx;
  white-space: nowrap;
  display: flex;
}

.select-color {
  margin: 15rpx;
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #ececec;
}

.checkedColor {
  border: 5rpx solid greenyellow;
}
